[user]
name = Tugrul Ates
email = me@tugrulates.com
[commit]
gpgsign = true
[tag]
gpgsign = true
[alias]
lg = log --graph --oneline --all --decorate
s = status -s
b = town switch
hack = town hack
append = town append
prepend = town prepend
up = town up
down = town down
set-parent = town set-parent
rename = town rename
delete = town delete
diff-parent = town diff-parent
park = town park
sync = town sync
compress = !sh -c 'git sync $@ && git town compress $@' -
propose = !sh -c 'git compress $@ && git town propose $@' -
repo = town repo
[filter "lfs"]
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f
process = git-lfs filter-process
required = true
[core]
autocrlf = input
editor = code --wait
excludesFile = ~/.gitignore
# win: fileMode = false
[init]
defaultBranch = main
[rerere]
enabled = true
autoupdate = true
[gui]
encoding = utf-8
[git-town]
sync-feature-strategy = rebase
