{
  "env": {
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "permissions": {
    "allow": [
      "Bash(cd:*)",
      "Bash(flow:*)",
      "Bash(forge list:*)",
      "Bash(gh pr:*)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git diff-parent:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git push:*)",
      "Bash(git restore:*)",
      "Bash(git status:*)",
      "Bash(git town append:*)",
      "Bash(git town hack:*)",
      "Bash(git town prepend:*)",
      "Bash(git town switch:*)",
      "Bash(head:*)",
      "Bash(less:*)",
      "SlashCommand(/design:*)",
      "SlashCommand(/feature:*)",
      "SlashCommand(/fix:*)",
      "SlashCommand(/review:*)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:code.claude.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebSearch"
    ],
    "deny": [
      "Read(**/.env*)",
      "Read(**/*.aes)",
      "Read(**/*.age)",
      "Read(**/*.argon2)",
      "Read(**/*.bcrypt)",
      "Read(**/*.cert)",
      "Read(**/*.crt)",
      "Read(**/*.gpg)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Read(**/*.pgp)",
      "Read(**/*.scrypt)",
      "Read(**/secrets.yml)",
      "Read(.dev.vars)"
    ],
    "ask": []
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": false,
    "allowUnsandboxedCommands": false
  },
  "alwaysThinkingEnabled": true
}
